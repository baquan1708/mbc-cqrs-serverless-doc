{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules",
    "**/docusaurus-plugin-content-docs/**",
    "scripts",
    "build"
  ],
  "verbose": false,
  "watch": ["docs", "src", "i18n", "sidebars.ts", "docusaurus.config.ts"],
  "ext": "js,tsx,md,json",
  "exec": "npm run translate:extract-placeholder && npm run translate:replace-placeholders"
}
